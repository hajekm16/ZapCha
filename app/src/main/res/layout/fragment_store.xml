<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    <variable
        name="storeViewModel"
        type="mucacho.apps.zapcha.store.StoreViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

        <Button
            android:id="@+id/AnanasButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/productName_Ananas"
            android:onClick="@{() -> storeViewModel.onSelectProduct(1)}"/>
        <Button
            android:id="@+id/ZazvorButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/productName_Zazvor"
            android:onClick="@{() -> storeViewModel.onSelectProduct(2)}"/>
        <Button
            android:id="@+id/BoruvkaButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/productName_Boruvka"
            android:onClick="@{() -> storeViewModel.onSelectProduct(3)}"/>

    </LinearLayout>
</layout>